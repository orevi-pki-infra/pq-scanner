{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/observation-repo.json",
  "type": "object",
  "required": [
    "repo"
  ],
  "properties": {
    "repo": {
      "type": "object",
      "required": [
        "repo_id",
        "crypto_dependencies",
        "crypto_dependencies_summary"
      ],
      "properties": {
        "repo_id": {
          "type": "string"
        },
        "evidence_paths": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "runtimes": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "id"
            ],
            "properties": {
              "id": {
                "type": "string"
              },
              "version": {
                "type": "string"
              }
            },
            "additionalProperties": true
          }
        },
        "crypto_dependencies": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "version",
              "ecosystem",
              "age_days"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "version": {
                "type": "string"
              },
              "ecosystem": {
                "type": "string"
              },
              "age_days": {
                "type": "integer"
              },
              "evidence_file": {
                "type": "string"
              }
            },
            "additionalProperties": true
          }
        },
        "crypto_dependencies_summary": {
          "type": "object",
          "required": [
            "distinct_stacks"
          ],
          "properties": {
            "distinct_stacks": {
              "type": "integer"
            },
            "stacks": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}