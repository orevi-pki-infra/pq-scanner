{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/observation-vault.json",
  "type": "object",
  "required": [
    "vault"
  ],
  "properties": {
    "vault": {
      "type": "object",
      "required": [
        "mount",
        "keys"
      ],
      "properties": {
        "mount": {
          "type": "string"
        },
        "keys": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "type": {
                "type": "string"
              },
              "rotation": {
                "type": "object",
                "properties": {
                  "enabled": {
                    "type": "boolean"
                  }
                },
                "additionalProperties": true
              },
              "ttl_seconds": {
                "type": "integer"
              },
              "tags": {
                "type": "object",
                "additionalProperties": true
              }
            },
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}